{
  "name": "amns",
  "version": "1.0.0",
  "type": "module",
  "description": "Alumni management and networking system",
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=8.11.0"
  },
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --es-module-specifier-resolution=node server.js",
    "format-check": "prettier --check . --ignore-path .gitignore",
    "format-write": "prettier --write . --ignore-path .gitignore",
    "lint-check": "eslint .",
    "lint-fix": "eslint --fix .",
    "prepare": "husky install",
    "start": "node --es-module-specifier-resolution=node server.js",
    "test": "jest"
  },
  "lint-staged": {
    "*": "yarn lint-check"
  },
  "jest": {
    "collectCoverage": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "socket.io": "^4.5.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0"
  }
}
